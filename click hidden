<script >
    window.onload=function(){
        var txt=document.getElementById("txt");
        txt.onfocus=function() {
               /*点击搜索框value值消失，并改变输入字体颜色*/
            if (txt.value == "请输入...") {
                txt.value = "";
                txt.style.color="#333";
            }
        }
        txt.onblur= function(){
            /*点击其他地方value值复原*/
            if (txt.value=="") {
                txt.value = "请输入...";
                txt.style.color = "#ccc";
            }
        }
    }
</script>
<body>
<div class="search">
    <input type="text" value="请输入..." id="txt"/>
    <button><a href="#"><img src="right.jpg" alt=""/></a></button>
</div>
</div>
</body>
