<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        .box{
            width: 730px;
            height: 454px;
            margin: 100px auto;
            overflow: hidden;
            position: relative;
        }
        .box ul{
            list-style: none;
        }
        .box ul li{
            display: none;
        }
        .box ul li.first{
            display: block;
        }
        .box .circle{
            position: absolute;
            left: 50%;
            margin-left:-90px;
            bottom:10px;
        }
        .box .circle span{
            float: left;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background-color: pink;
            text-align: center;
            line-height: 18px;
            margin-right: 10px;
            cursor: pointer;
        }
        .circle span.current{
            background-color: purple;
        }
    </style>
    <script>
        window.onload=function(){
            var bg=document.getElementById("bg");
            var div=document.createElement("div");
            bg.appendChild(div);
            div.setAttribute("class","circle");
            var ul=document.getElementById("ul");
            var lis=ul.children;
            for(var i=0;i<lis.length;i++){
                var span=document.createElement("span")
                div.appendChild(span);
                span.innerHTML=i+1
            }
            var child=div.children;
            child[0].setAttribute("class","current");
            for(var i= 0;i<child.length;i++){
                child[i].index=i
                child[i].onmousemove=function(){
                    for(var j= 0;j<child.length;j++){
                        child[j].className=""
                        lis[j].style.display="none"
                    }
                    child[this.index].className="current"
                    lis[this.index].style.display="block"
                }
            }
        }
    </script>
</head>
<body>
